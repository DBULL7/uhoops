extends ../layout 
append head
  title U-Hoops
  link(rel="shortcut icon" type="image/png" href="./assets/logo.png")
  link(rel="stylesheet" href="home/main.css")
  link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css" integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy" crossorigin="anonymous")
  
block content 
  nav(class="navbar navbar-expand-lg navbar-dark bg-dark")
      a(class="navbar-brand" href="/")
        img(src="/assets/logo.png" width="30" height="30")
      button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
        span(class="navbar-toggler-icon")
      div(class="collapse navbar-collapse" id="navbarSupportedContent")
        ul(class="navbar-nav")
          li(class="nav-item")
            a(class="nav-link" href="/about") About
          li(class="nav-item")
            a(class="nav-link" href="/tours") Tours 
  div(id="hero-img" class="text-center")
    h2.text-white.tag Global Basketball Network
    h3.text-white Inspire, Connect, and Empower Players and Other Affiliates
    button(type="button" class="btn btn-outline-light") Join Us
  div(class="container-fluid bg-dark text-center")
    h2.text-white Global Network
    img(src="/assets/divider-xx-red.png", alt="divider icon")
    p.text-secondary U-Hoops is basketball network platform that brings players, scouts, coaches and sports professionals on a platform to connect all over the world, while providing them the tools and data to create career opportunities.
  .row 
    

  script(asynce, src="home/index.js")
  script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous")
  script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/js/bootstrap.min.js" integrity="sha384-a5N7Y/aK3qNeh15eJKGWxsqtnX/wWdSZSKp+81YjTmS15nvnvxKHuzaWwXHDli+4" crossorigin="anonymous")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous")
  script(defer src="https://use.fontawesome.com/releases/v5.0.2/js/all.js")
