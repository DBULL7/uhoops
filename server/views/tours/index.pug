  nav(class="navbar navbar-expand-lg navbar-dark")
    a(class="navbar-brand" href="/") 
      img(src="/assets/logo.png" width="30" height="30" class="d-inline-block align-top nav-logo")
      | U-Hoop
    button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
      span(class="navbar-toggler-icon")
    div(class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent")
      ul(class="navbar-nav")
        li(class="nav-item dropdown")
          a(class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Services
          div(class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink")
            a(class="dropdown-item" href="/tours") Tours 
            a(class="dropdown-item" href="/camps") Training Camps
            a(class="dropdown-item" href="/courses") Online Courses
        li.nav-item.nav-btn
          button(class="btn btn-outline-light" data-toggle="modal" data-target="#login") Login
        li.nav-item.nav-btn
          button(class="btn btn-outline-light" data-toggle="modal" data-target="#register") Sign up 

